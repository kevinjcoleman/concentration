<!DOCTYPE html>
<html>
<head>
  <title>Concentration game</title>
  <%= stylesheet_link_tag  'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'Thinking_Face.png' %>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
</head>
<body>
<nav id="nav" class="navbar navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "<strong class=\"text-uppercase\">Concentration ðŸ¤”</strong>".html_safe, root_path, class: "navbar-brand" %>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if current_player %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_player.playername %> <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Dashboard", root_path %><li>
                  <li><%= link_to "Account info", edit_player_registration_path %></li>
                  <li><%= link_to "Signout", destroy_player_session_path %></li>
                </ul>
            </li> 
            <% else %>
              <li><%= link_to "Sign-in", new_player_session_path %></li>
            <% end %>
          </ul>
          
          <!-- Large modal -->
            
        </div><!--/.nav-collapse -->
      </div>
    </nav>
    <div class="container main-container">      
      <%= render 'layouts/messages' %>
      <%= yield %>
  </div>
</body>
</html>